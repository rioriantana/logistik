<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bnpb.logistik.logistikbencana">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo_uns1"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo_uns1"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MenuActivity"
            android:label="@string/title_activity_menu"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".PengungsiActivity"
            android:label="Data Pengungsi"
            android:parentActivityName=".MenuActivity" />
        <activity
            android:name=".KebutuhanActivity"
            android:label="Kebutuhan Logistik"
            android:parentActivityName=".MenuActivity" />
        <activity
            android:name=".StokActivity"
            android:label="Stok Logistik"
            android:parentActivityName=".MenuActivity" />
        <activity
            android:name=".BantuanActivity"
            android:label="Bantuan Logistik"
            android:parentActivityName=".MenuActivity" />
        <activity android:name=".AboutActivity"></activity>
    </application>

</manifest>